{
  "hosting": [
    {
      "target": "demo",
      "public": "out",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "cleanUrls": true,
      "trailingSlash": true,
      "rewrites": [
        {
          "source": "/api/mediumPosts",
          "function": "mediumPosts"
        },
        {
          "source": "/api/verifyTurnstile",
          "function": "verifyTurnstile"
        },
        {
          "source": "**",
          "destination": "/index.html"
        }
      ],
      "headers": [
        {
          "source": "**/*.@(jpg|jpeg|gif|png|svg|webp|js|css|eot|otf|ttf|ttc|woff|woff2|font.css)",
          "headers": [
            {
              "key": "Cache-Control",
              "value": "max-age=604800"
            }
          ]
        }
      ]
    },
    {
      "target": "production",
      "public": "out",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "cleanUrls": true,
      "trailingSlash": true,
      "rewrites": [
        {
          "source": "/api/mediumPosts",
          "function": "mediumPosts"
        },
        {
          "source": "/api/verifyTurnstile",
          "function": "verifyTurnstile"
        },
        {
          "source": "**",
          "destination": "/index.html"
        }
      ],
      "headers": [
        {
          "source": "**/*.@(jpg|jpeg|gif|png|svg|webp|js|css|eot|otf|ttf|ttc|woff|woff2|font.css)",
          "headers": [
            {
              "key": "Cache-Control",
              "value": "max-age=604800"
            }
          ]
        }
      ]
    }
  ],
  "functions": {
    "source": "functions"
  }
} 