{
  "hosting": [
    {
      "target": "demo",
      "public": ".next",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "rewrites": [
        {
          "source": "**",
          "function": "nextServer"
        }
      ]
    },
    {
      "target": "prod",
      "public": ".next",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "rewrites": [
        {
          "source": "**",
          "function": "nextServer"
        }
      ]
    }
  ],
  "functions": {
    "source": "functions"
  }
} 