{
  "hosting": [
    {
      "target": "demo",
      "public": "out",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "cleanUrls": true,
      "rewrites": [
        {
          "source": "/api/mediumPosts",
          "function": "mediumPosts"
        },
        {
          "source": "/api/verifyTurnstile",
          "function": "verifyTurnstile"
        },
        {
          "source": "**",
          "destination": "/index.html"
        }
      ]
    },
    {
      "target": "production",
      "public": "out",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "cleanUrls": true,
      "rewrites": [
        {
          "source": "/api/mediumPosts",
          "function": "mediumPosts"
        },
        {
          "source": "/api/verifyTurnstile",
          "function": "verifyTurnstile"
        },
        {
          "source": "**",
          "destination": "/index.html"
        }
      ]
    }
  ],
  "functions": {
    "source": "functions"
  }
} 